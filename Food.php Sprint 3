        $query1 = "SELECT * FROM food WHERE Foodtype LIKE '%$search%'";
        $query = mysqli_query($con, $query1);
        $count = mysqli_num_rows($query);

        if($count == 0){
            echo "There was no search results!";

        }else{

            while ($row = mysqli_fetch_array($query)) {

                echo $row ['Foodtype'];
                echo "<br>";
            }
        }
